generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
// USER
model User {
  id       String    @id
  sessions Session[]
  password_hash String?
  username String? @unique
  email    String?    @unique
  mobile   String?
  avatar_url String? 
  email_verified Boolean @default(false)
  name String?
  given_name String?
  family_name String?
  picture String?
}

//SESSION
model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}